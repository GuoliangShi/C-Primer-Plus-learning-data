#include<iostream>
#include<cstring>
#include"stringbad.h"

using namespace std;
int Stringbad::num_strings = 0;

Stringbad::Stringbad()
{
	len = 4;
	str = new char[len];
	strcpy(str, "C++");
	++num_strings;
	cout << num_strings << " :\"" << str
		<< "\"object created\n";
}
Stringbad::Stringbad(const char*s)
{
	len = strlen(s);
	str = new char[len + 1];
	strcpy(str, s);
	++num_strings;
	cout << num_strings << ": \"" << str
		<< "\"object created\n";
}

Stringbad::~Stringbad()
{
	cout << "\"" << str << "\" object deleted, ";
	--num_strings;
	cout << num_strings << " left\n";
	delete[] str;
}

std::ostream & operator<<(std::ostream &os, const Stringbad &st)
{
	os << st.str;
	return os;
}
