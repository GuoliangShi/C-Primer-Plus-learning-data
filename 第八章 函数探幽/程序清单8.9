//默认参数
#include<iostream>

using namespace std;

char *left(const char* arr, int n = 2);

void main()
{
	char arr[] = "csdvwsbvasf";
	char *out1 = left(arr);
	char *out2 = left(arr, 100);
	cout << out1 << endl;
	cout << out2 << endl;
}

char *left(const char* arr, int n)
{
	if (n < 0)
		n = 0;
	char *p = new char[n + 1];
	int i;
	for (i = 0; i < n&&arr[i]; i++)
		p[i] = arr[i];
	while (i <= n)
		p[i++] = '\0';
	return p;
}
