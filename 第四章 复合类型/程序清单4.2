#include<iostream>
#include<cstring>

using namespace std;

void main()
{
	const int len = 15;
	char name1[len];
	char name2[len] = "C++owboy";
	cout << "Hellow! I am " << name2 << "! What is your name?" << endl;
	cin >> name1;
	cout << name1 << " has " << strlen(name1) << " lettres." << endl;
