// 编程练习题3
#include<iostream>
//#include<cstring>

using namespace std;

void main()
{
	cout << "Enter your first name: ";
	char first[20];
	cin.getline(first, 20);
	cout << "Enter your last name: ";
	char last[20];
	cin.getline(last, 20);
	char name[100];
	strcpy(name, last);
	strcat(name, ", ");
	strcat(name, first);
	cout << "Here is the information in a single string: " << name << endl;
}
