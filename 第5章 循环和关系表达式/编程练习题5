#include<iostream>

using namespace std;

void main()
{
	const char *month[12] = {
		"January","February","March","April","May","June",
		"July","August","September","October","November","December"
	};
	int sale[12];
	int all = 0;
	for (int i = 0; i < 12; i++) {
		cout << month[i] << ": ";
		cin >> sale[i];
		all += sale[i];
	}
	cout << "The sum of sales number is: " << all << endl;
}
